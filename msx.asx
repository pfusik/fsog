	dta	0
	dta	D_3
	dta	0
	dta	BASS|G_3|V1
	dta	0
	dta	DRUM|D_3
	dta	D_3|V1
	dta	Dh3
	dta	0
	dta	D_3|V1
	dta	0
	dta	BASS|C_3
	dta	0
	dta	DRUM|C_3|V1
	dta	0
	dta	BASS
	dta	0
	dta	BASS
	dta	0
	dta	0
	dta	0
	dta	DRUM
	dta	0
	dta	0
	dta	0

pattern4
	dta	0
	dta	C_2
	dta	D_2
	dta	Dh2
	dta	F_2
	dta	Dh2
	dta	D_2
	dta	C_2

